<%= content_for :title do %>Edit user<% end %>
<section class="debug">
  <h1>Update your profile</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @user, html: { role: "form" } do |f| %>
        <%= render 'shared/error_messages' %>
        <div class="form_group">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: "e.g. Bob Loblaw", class:"form-control" %>
        </div>
        <div class="form_group">
          <%= f.label :email %>
          <%= f.text_field :email, placeholder: "e.g. BobLoblaw@gmail.com", class:"form-control" %>
        </div>
        <div class="form_group">
          <%= f.label :password %>
          <%= f.password_field :password, placeholder:"password must be longer than 6 characters", class:"form-control" %>
        </div>
        <div class="form_group">
          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation, placeholder:"password must be longer than 6 characters", class:"form-control" %>
        </div>
        <div class="form_group">
          <%= f.submit "Save Changes", class: "save_changes_submit_button btn btn-primary" %>
        </div>
      <% end %>
      <%= gravatar_for @user %>
      <!-- Keep as <a href> tag! Turbolink changes url when rendered making test for link fail. -->
      <a href="https://gravatar.com/emails">change</a>
    </div>
  </div>
</section>