<%= form_for @micropost, html: {role: 'form' } do |f| %>
  <%= render 'shared/error_messages', object: f.object  %>
  <div class="field">
    <%= f.text_area :content, placeholder: 'Compose a new micropost...', class:'form-control' %>
  </div>
  <%= f.submit 'Post', class:'btn btn-primary', id:'micropost_post_submit' %>
<% end %>