<header>
  <nav class="navbar navbar-fixed-top navbar-inverse main-navbar" role="navigation">
    <h1 class="sr-only"><%= base_title %> Head Navigation</h1>
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Logo', root_path, class: "navbar-brand", id: "logo" %>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li class="active"> <%= link_to 'Home', root_path %> </li>
          <li> <%= link_to 'Help', help_path %> </li>
          <% if signed_in? %>
            <li> <%= link_to 'Users', users_path %> </li>
              <li id="fat-menu" class="dropdown">
                <!-- Keep as <a href> instead of Turbolink.  Issues with toggling dropdown with link_to -->
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu" role="menu" aria-labelledby="account options dropdown-menu">
                  <li role="presentation"> <%= link_to 'Profile', current_user %> </li>
                  <li role="presentation"> <%= link_to 'Settings', edit_user_path(current_user) %> </li>
                  <li role="separator" class="divider"></li>
                  <li role="presentation"> <%= link_to 'Sign out', signout_path, method: "delete" %> </li>
                </ul>
              </li>
            </div>
          <% else %>
            <li role="presentation">
              <%= link_to 'Sign in', signin_path, html: { role:'menuitem', tabindex: -1 } %>
            </li>
          <% end %>
        </ul>
      </div><!-- .nav-collapse -->
    </div>
  </nav>
</header>
